{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es6", "ES2021"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "demo.ts",
    "jest.config.js",
    "./dist/**/*",
    "./tests",
    "./demo"
  ]
}
